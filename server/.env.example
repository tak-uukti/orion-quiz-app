# Backend Environment Variables
# Copy this file to .env for local development

# MongoDB Connection
# Local MongoDB (for development):
# MONGODB_URL=mongodb://localhost:27017

# MongoDB Atlas (production - example format):
MONGODB_URL=mongodb+srv://username:password@cluster.fgi1drs.mongodb.net/?appName=yourapp

# Database Name
DATABASE_NAME=quiz_app

# Server Port
PORT=8000

# CORS Origins (comma-separated for multiple origins)
# For development, use * to allow all origins
# For production, specify your frontend URL
CORS_ORIGINS=*
# Production example:
# CORS_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:5173
